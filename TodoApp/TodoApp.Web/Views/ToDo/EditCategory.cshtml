<!-- EditCategory.cshtml -->
@model List<TodoApp.Web.Models.CategoryViewModel>

<h2>Edit Category</h2>

<!-- Yeni kategori ekleme formu -->
<form asp-action="AddCategory" method="post">
    <div class="form-group">
        <label asp-for="@Model.FirstOrDefault().NewCategoryName" class="control-label">New Category:</label>
        <input asp-for="@Model.FirstOrDefault().NewCategoryName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Add Category</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Task Count</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>@category.TaskCount</td>
                <td>
                    <form asp-action="DeleteCategory" asp-route-id="@category.CategoryID" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
