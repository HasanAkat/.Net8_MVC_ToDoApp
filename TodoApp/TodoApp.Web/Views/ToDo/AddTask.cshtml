@model TodoApp.Web.Models.TaskViewModel

<h2>Add Task</h2>

<form asp-action="AddTask" method="post">
    <div class="form-group">
        <label asp-for="TaskTitle" class="control-label">Task Title:</label>
        <input asp-for="TaskTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TaskContext" class="control-label">Task Context:</label>
        <textarea asp-for="TaskContext" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID" class="control-label">Category:</label>
        <select asp-for="CategoryID" asp-items="@(ViewBag.Categories)" class="form-control">
            <option value="">-- Select Category --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="IsCompleted" class="control-label">Is Completed:</label>
        <input asp-for="IsCompleted" type="checkbox" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Task</button>
    </div>
</form>
